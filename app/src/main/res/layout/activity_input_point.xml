<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputPoint">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#2A2A2A">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INPUT POINT"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="24dp" />

    <!-- Customer's phone -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer's phone"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

        <!-- Current point -->
        <EditText
            android:id="@+id/CustomerPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BBBBBB"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current point"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingTop="16dp"/>

    <EditText
        android:id="@+id/CurrentPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:enabled="false"
        android:text="0"
        android:backgroundTint="#BBBBBB"/>

    <!-- Input new point -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input new point"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingTop="16dp"/>

    <EditText
        android:id="@+id/NewPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:backgroundTint="#BBBBBB"/>

    <!-- Note -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingTop="16dp"/>

    <EditText
        android:id="@+id/Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textColor="#FFFFFF"
        android:lines="3"
        android:minLines="3"
        android:gravity="top"
        android:backgroundTint="#BBBBBB"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:backgroundTint="#B38BFC"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/btnSaveNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE and NEXT"
            android:backgroundTint="#B38BFC"
            android:textColor="#FFFFFF"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Bottom Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btnInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:backgroundTint="#B38BFC"
                android:text="INPUT"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:backgroundTint="#B38BFC"
                android:text="USE"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B38BFC"
                android:text="LIST"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>