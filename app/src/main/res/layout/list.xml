<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="#D3D3D3">

    <!-- Left Side -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <!-- Large number -->
            <TextView
                android:id="@+id/phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5678901234"
                android:textColor="#FFFF00"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/timecreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-07-31 08:14:59"
                android:textColor="#808080"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="4"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- Right Side: Secondary timestamp, delete icon, and top-right detail icon -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Secondary timestamp -->
        <TextView
            android:id="@+id/timeedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-07-31 08:15"
            android:textColor="#808080"
            android:textSize="12sp" />

        <!-- Delete icon -->
        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="25dp"
            android:layout_height="31dp"
            android:layout_gravity="end"
            android:src="@drawable/trash_erase" />
    </LinearLayout>
</LinearLayout>
